#!/usr/bin/env bash
set -e

# check ASDF environment variables
[ -n "$ASDF_INSTALL_VERSION" ] || (echo 'Missing ASDF_INSTALL_VERSION' >&2 && exit 1)
[ -n "$ASDF_DOWNLOAD_PATH" ] || (echo 'Missing ASDF_DOWNLOAD_PATH' >&2 && exit 1)

case "$(uname -s)" in
	"Darwin")
		DOWNLOAD_URL="https://github.com/grimoh/waste/releases/download/v${ASDF_INSTALL_VERSION}/waste-darwin-amd64.tar.gz"
		;;
	"Linux")
		DOWNLOAD_URL="https://github.com/grimoh/waste/releases/download/v${ASDF_INSTALL_VERSION}/waste-linux-amd64.tar.gz"
		;;
esac

curl -fL -o "${ASDF_DOWNLOAD_PATH}/waste.tar.gz" "${DOWNLOAD_URL}"
